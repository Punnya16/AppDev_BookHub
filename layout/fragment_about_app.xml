<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.AboutAppFragment">

    <ImageView
        android:id="@+id/aboutAppBook"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/about_app_book"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"/>
    <TextView
        android:id="@+id/txtAboutApp"
        android:layout_below="@id/aboutAppBook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="The App takes you to the World of Books by showing you the list of most popular books of all time!"
        android:textSize="20sp"
        android:padding="10dp"
        android:layout_marginTop="50dp"/>

    <TextView
        android:id="@+id/txtAddFavApp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtAboutApp"
        android:layout_marginTop="40dp"
        android:text="Add your favorite book now and read about them easily!"
        android:textSize="20sp"
        android:padding="10dp"/>


    <TextView
        android:id="@+id/txtEnjoyApp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtAddFavApp"
        android:layout_marginTop="40dp"
        android:text="ENJOY THE WORLD OF BOOKS!"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="22sp"
        android:padding="10dp"/>



</RelativeLayout>